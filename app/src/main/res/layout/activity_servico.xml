<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServicoActivity"
    android:background="@drawable/back_p"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/detalhe_servico"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="20dp"/>



<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="23dp"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    android:background="#ADFF2F"
    >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Máquina com problema? "
        android:textColor="#000000"
        android:textSize="26dp"
        />

    <Spinner
        android:id="@+id/modelo_marcaId"
        android:layout_width="225dp"
        android:layout_height="29dp"
        android:layout_marginLeft="45dp" />
    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Código do problema"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="40dp"/>

    <Spinner
        android:id="@+id/codigoproblemaId"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp" />

</LinearLayout>

    <ListView
        android:id="@+id/listViewId"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="50dp"
        android:background="#FFFF00" />

    <Button
        android:id="@+id/buttonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:background="#FFFFFF"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="30dp"/>

</LinearLayout>


